    url("../fonts/SegoeUILight/SegoeUILight.woff") format("woff"),
    url("../fonts/SegoeUILight/SegoeUILight.ttf") format("truetype");
    font-style: normal;
    font-weight: normal;
}


*
  box-sizing border-box
  font inherit


html,body
  width 100%
  height 100%



body

  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  margin 0

  font 14px/1.4 "SegoeUIRegular"
  //font 14px/1.4 SegoeUIRegular sans-serif
  //font-family SegoeUIRegular, sans-serif


  color #333
  min-width 1300px

h1
  font-family "SegoeUILight"

b, h3
  font-family: "SegoeUIBold"




.center //кнопки "MORE"

  padding 30px 0
  clear both
  text-align center
//.pagination
.pages
  margin-top -4em //костыль
  a
    display inline-block
    width 35px
    height 35px

    border 1px solid #c1c1c1
    border-radius 3px

    color #a7a7a7
    text-decoration none

    font-size 20px
    line-height 32px
    margin 1em


.js-tab
  display none
  &.current
    display block

