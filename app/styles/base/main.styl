.wrap
  //width 1260px
  width 1300px
  padding 0 30px
  margin 0 auto







section
  .subnav
    position absolute
    right 0
    top 50px
    color  #999 //для разделителя
    a
      color  #999
      text-decoration none
      &:hover
        border-bottom 1px dashed
      &.tab_current
        text-decoration underline
        border-bottom 0

  h2
    text-align center
    font-size 36px
    //color #333





[placeholder]
  font-size 16px
  //font-family: //arial
  //padding 0 1em

textarea
  padding: 1em

input,textarea
  border 1px solid #c4c4c4

  //padding-bottom: 1em

input
  height 36px
  line-height 36px
  padding: 0 1em

  margin-bottom 1em

input,button,textarea
  &:focus
    box-shadow none
    outline none



//button, input[type="submit"]
button, .btn, input[type="submit"]
  cursor pointer
  padding 0 2em
  color #FFF
  border 0
  border-radius 3px
  font-size 16px

  line-height 36px
  height 37px

  background linear-gradient(90deg, #6d99ff 0%, #3c6cde 100%)
  &:hover
    background  #6491f9
  &:active
    background  #4b7cef


.btn
  display inline-block
  text-decoration none

btn-green()
  background #7cb342
  &:hover
    background  #95c561
  &:active
    background  #71a23c

.btn-green
  background #7cb342
  &:hover
    background  #95c561
  &:active
    background  #71a23c




