footer
  cf()

  background url(../img/bg_footer.svg) #f5f5f5 //#DDD
  padding 0 0 40px

  h4
    font-size 18px


  nav, address, form
    float left

  address
    width 400px
  nav
    width 200px
    a
      display block
      //text-decoration none
      color #333
      font-size 16px
      line-height 30px

      &:hover
        text-decoration underline


  .iconlist
    width 300px
    a
      line-height 36px

      &:before
        padding-bottom .5em
        content ''
        display inline-block
        width 36px
        height 36px

        vertical-align top  //middle
        //margin 0 1em .5em 0
        margin-right 1em

      &:nth-of-type(1):before
        background url(../img/f-i_1.png) no-repeat
      &:nth-of-type(2):before
        background url(../img/f-i_2.png) no-repeat
      &:nth-of-type(3):before
        background url(../img/f-i_3.png) no-repeat
      &:nth-of-type(4):before
        background url(../img/f-i_4.png) no-repeat



  form
    [placeholder]
      font-style italic
    width 340px
    input, textarea
      //display inline-block
      width 100%
      margin-bottom 1em
    textarea
      height 80px




#Ftr-cities
  p
    margin 0 0 .5em
    position relative
    &:before
      content ''
      position absolute
      top 2px
      left -20px
      width 14px
      height 14px
    &:nth-of-type(1)
      b
        color #4e7bd6
      &:before
        background url(../img/i-f-city.png) center no-repeat
    &:nth-of-type(2):before
      background url(../img/i-f-tel.png) center no-repeat
    &:nth-of-type(3):before
      background url(../img/i-f-time.png) center no-repeat


.copyright
  clear both
  padding-top 1em

.completo
  color #333
  float right
  height 25px
  padding-left 80px
  background url(../img/logo-complet.png) left center no-repeat
  &:hover
    text-decoration underline
