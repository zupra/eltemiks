.catalog_start
  box-shadow 0 0 12px #556680
  // h1
  //   f-n()
  background #f6f5f3
  padding 4em 0 2em
  margin-top -49px
  border-top 5px solid #008fff



.catalog
  padding 2em 0
  cf()
  color #000


  .ul
    span(1/4)

    &.ul_1 h2
      background url(../img/ctlg_1.png) bottom no-repeat
    &.ul_2 h2
      background url(../img/ctlg_2.png) bottom no-repeat
    &.ul_3 h2
      background url(../img/ctlg_3.png) bottom no-repeat
    &.ul_4 h2
      background url(../img/ctlg_4.png) bottom no-repeat

  h2
    width 255px
    height 113px
    color #fefefe
    font-size 18px

    padding 3em 0 0 7em

  ul ul
    padding-left 25px
  li
    f-b()
  li a
    color #000
    f-n()
    &:hover
      text-decoration underline
      color steelblue


//зелёные
#CTLG_block
  cf()
  padding 3em 0

  .item
    //col(1/3)
    margin 0 1em
    float left

    height 190px
    border 2px solid #70ba4f
    padding 0 10px

    text-align center

    &:nth-child(1)
      width 34%
      input
        width 42%
        & + input
          margin-left 1em
    &:nth-child(2)
      width 28%
    &:nth-child(3)
      width 24%

  h3
    font-size 24px
    f-n()
    line-height 1

  input
    width 63%
