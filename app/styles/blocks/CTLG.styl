.catalog_fltr
  background #f6f5f3
  padding 2em 0
  margin-top -4em
  border-top 5px solid #008fff



.catalog
  cf()
  color #000

  div
    span(1/4)

    margin-bottom 2em
    li
      font-weight bold

  li a
    color #000


#CTLG_block
  cf()
  padding 2em 0

  .item
    //col(1/3)
    margin 0 1em
    float left

    height 210px
    border 2px solid #70ba4f
    padding 10px

    text-align center

    &:nth-child(1)
      width 34%
      input
        width 42%
        & + input
          margin-left 1em
    &:nth-child(2)
      width 28%
    &:nth-child(3)
      width 24%

  h3
    font-size 24px
    f-n()
    line-height 1

  input
    width 63%
