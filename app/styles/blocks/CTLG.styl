.catalog_fltr

  box-shadow 0 0 12px #556680

  h1
    f-n()

  background #f6f5f3
  padding 2em 0
  margin-top -4em
  border-top 5px solid #008fff


  .sort
    color #000
    a
      color #000
      text-decoration none
      margin 0 1em
      &:hover
        text-decoration underline
      &.active
        f-b()
        text-decoration underline

  .sort_alphabet
    color #999
    font-size 25px
    a
      color #999
      text-decoration none
      &:hover
        text-decoration underline





.catalog

  padding 2em 0
  cf()
  color #000

  ul ul
    padding-left 25px

  div
    span(1/4)



    margin-bottom 2em
    li
      f-b()

  li a
    color #000
    f-n()


#CTLG_block
  cf()
  padding 2em 0

  .item
    //col(1/3)
    margin 0 1em
    float left

    height 210px
    border 2px solid #70ba4f
    padding 10px

    text-align center

    &:nth-child(1)
      width 34%
      input
        width 42%
        & + input
          margin-left 1em
    &:nth-child(2)
      width 28%
    &:nth-child(3)
      width 24%

  h3
    font-size 24px
    f-n()
    line-height 1

  input
    width 63%
