#header .cart
  float right
  color #000
  border 1px solid #c4c4c4
  background linear-gradient(0deg, #e0e0e0 0%, #ffffff 100%)
  &:hover
    background #ececec
  &:active
    background linear-gradient(0deg, #ffffff 0%, #e0e0e0 100%)


#bigNav .cart
  border 1px solid #FFF
  display inline-block
  //float left
  &:hover
    background #089EFD
  &:active
    background #0788EC


.cart
  cursor pointer
  text-decoration none

  height 47px
  //width 120px
  padding 0 20px
  line-height 47px
  border-radius 5px

  position relative

  .cart_sum-prod
    font-style normal
    background #ff4c4c
    position absolute
    top -10px
    right -10px

    width 25px
    height 25px
    border-radius 50%

    text-align center
    line-height 25px
    font-size 11px
    color #FFF


#cart_order
  box-shadow 0 0 12px


  position absolute
  right 0
  top 60px
  z-index 10
  width 400px

  background #FFF
  padding 0 1em 1em

  //reset
  text-align left
  line-height 1.4
  border-radius 0

  li b
    float right
    //text-align right
