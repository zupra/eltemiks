#header .cart
  float right
  color #000
  border 1px solid #c4c4c4
  background linear-gradient(0deg, #e0e0e0 0%, #ffffff 100%)
  &:hover
    background #ececec
  &:active
    background linear-gradient(0deg, #ffffff 0%, #e0e0e0 100%)



#bigNav .cart
  border 1px solid #FFF
  display inline-block
  //float left
  &:hover
    background #089EFD
    text-decoration none
  &:active
    background #0788EC


.cart
  cursor pointer
  //text-decoration none

  height 47px
  //width 120px
  padding 0 20px
  line-height 47px
  border-radius 5px

  position relative


  //helper:hover
  &:after
    content ''
    position absolute
    bottom -15px
    right 0
    left -20px
    height 15px
    //background #000


  .cart_sum-prod
    font-style normal
    background #ff4c4c
    position absolute
    top -10px
    right -10px

    width 25px
    height 25px
    border-radius 50%

    text-align center
    line-height 25px
    font-size 11px
    color #FFF

  &:hover
    #cart_order
      display block

#cart_order
  display none



  &:after
  &:before
    content ''
    position absolute


  &:after
    width 100%
    left 0
    height 8px
    background url(../img/cart_after.png) repeat-x
    bottom -8px


  &:before
    right 40px
    top -20px
    border-style: solid;
    border-width: 0 0 20px 20px;
    border-color: transparent transparent #FFF transparent;




