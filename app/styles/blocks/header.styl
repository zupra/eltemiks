
.topnav
  color  #fff
  position fixed
  z-index 1001
  width 100%
  background #008efd
  height 35px
  line-height 34px


  a
   color #FFF
   //text-decoration none
  svg
    display inline-block
    vertical-align middle






.header_1
  height 640px








header
  padding-top 70px
  color  #fff

  background url(../img/bg_header.jpg) center no-repeat #234374


  text-align center

  h1
    font-size 30px
    f-l()
  h2
    font-size 14px
    line-height 20px


  ul
    list-style none
    padding 110px 0 70px
    //cf()
    li
      float left
      width 25%
      position relative
      font-size 20px

      text-shadow 0px 1px 0px rgba(0, 0, 0, 0.25)

      a
        color #FFF
        &:hover
          text-decoration underline

        &:before
          content ''
          position absolute
          left 50%
          top -70px
          transform translateX(-50%)
          width 69px
          height 69px


      &:nth-child(1) a:before
        background url(../img/i-h_1.png) no-repeat
      &:nth-child(2) a:before
        background url(../img/i-h_2.png) no-repeat
      &:nth-child(3) a:before
        background url(../img/i-h_3.png) no-repeat
      &:nth-child(4) a:before
        background url(../img/i-h_4.png) no-repeat



  .Htabs a
      color #FFF
      //text-decoration none
      font-size 16px
      //line-height 22px
      text-shadow 0px 1px 2px rgba(0,0,0,.4)
      padding .5em 1.2em .8em
      display inline-block


      &:hover
        text-decoration underline
      &.active
        text-decoration none
        background #008fff
        border-radius 5px 5px 0 0




.Hform
  background #008fff
  padding 5px
  border-radius 12px
  position relative

  div
    border-radius 8px
    position relative
    z-index 1
  & > div
    padding 6px
    background #EDEDED
    //& > div
  .Hform_go
    padding 1em
    border 1px solid rgba(0, 0, 0, .15)
    box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.2)
    background linear-gradient(0deg, #dce3e8 0%, #f4f8fb 100%)



  img
    float left

  input[type='search']
    width 640px
    height 47px
    //reset
    border-radius 5px
    margin-bottom 0
    background url(../img/search_B.svg) 20px center no-repeat #FFF
    &:focus
      background #FFF

  button
    border-radius 0 3px 3px 0
    height 47px
    line-height 46px
    margin-left -8px
