.topnav
  color  #fff
  position fixed
  z-index 100
  width 100%
  background #008efd
  height 35px
  line-height 34px


  a
   color #FFF
   text-decoration none
  svg
    display inline-block
    vertical-align middle
  .contact
    float right




header
  padding-top 70px
  color  #fff

  text-align center
  background url(../img/bg_header.jpg)
  height 640px

  h1
    font-size 30px
    font-weight 300
  h2
    //width 800px
    font-size 14px
    font-weight 400
    line-height 20px
    text-align center

  ul
    list-style none
    padding 110px 0 70px
    li
      float left
      width 25%


      position relative

      font-size 20px
      //font-weight 700
      text-shadow 0px 1px 0px rgba(0, 0, 0, 0.25)

      &:before
        content ''
        position absolute
        left 50%
        top -70px
        transform translateX(-50%)
        width 69px
        height 69px
      &:nth-of-type(1):before
        background url(../img/i-h_1.png) no-repeat
      &:nth-of-type(2):before
        background url(../img/i-h_2.png) no-repeat
      &:nth-of-type(3):before
        background url(../img/i-h_3.png) no-repeat
      &:nth-of-type(4):before
        background url(../img/i-h_4.png) no-repeat



  .tabs a
      color #FFF
      text-decoration none
      font-size 16px
      //line-height 22px
      text-shadow 0px 1px 2px rgba(0,0,0,.4)
      padding .5em 1.2em .8em
      display inline-block


      &:hover
        text-decoration underline
      &.active
        text-decoration none
        background #008fff
        border-radius 5px 5px 0 0

  .form
    //border 5px solid #008fff
    background #008fff
    padding 5px


    border-radius 12px
    div
      border-radius 8px
      position relative
    & > div
      position relative
      z-index 1

      padding 6px
      background #EDEDED

      & > div
        position relative
        z-index 1

        padding 1em
        border 1px solid rgba(0, 0, 0, .15)
        box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.2)
        background linear-gradient(0deg, #dce3e8 0%, #f4f8fb 100%)



    img
      float left


    input[type='search']
      width 731px
      height 47px
      //reset
      border-radius 5px
      margin-bottom 0

    button
      border-radius 0 3px 3px 0
      height 47px
      line-height 46px
      margin-left -8px
